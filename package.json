{
  "name": "dgii-ecf",
  "version": "0.1.0",
  "description": "Este paquete contiene las herramientas necesarias para autenticar y firmar archivos eletrónicos para realizar la facturación electrónica para aplicaciones nodejs.",
  "private": true,
  "license": "MIT",
  "main": "dist/src/index.js",
  "scripts": {
    "compile": "tsc",
    "start": "node ./dist/src/index.js",
    "build": "npm run compile",
    "dev": "nodemon --watch './**/*.ts' --exec 'ts-node' ./src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "CURRENT_ENV=test jest --config ./jest.config.js ./src",
    "test:watch": "CURRENT_ENV=test jest --watch --config ./jest.config.js ./src"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "fs": "0.0.1-security",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/node-forge": "^1.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "babel-jest": "^29.3.1",
    "eslint": "^8.28.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
