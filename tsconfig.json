{
  "compilerOptions": {
    "allowJs": true,
    "rootDirs": ["src"],
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": ["dom", "es2017"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true, 
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
