{
  "compilerOptions": {
    "allowJs": true,
    "rootDirs": ["src"],
    "outDir": "./dist",
    "lib": ["dom", "es2017"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
